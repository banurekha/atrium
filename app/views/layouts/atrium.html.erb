
<html xmlns="http://www.w3.org/1999/xhtml">

  <head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= csrf_meta_tag %>

    <title><%= h(@page_title || application_name) %></title>
    <link href="<%= opensearch_catalog_path %>" title="<%= application_name%>" type="application/opensearchdescription+xml" rel="search"/>

    <%= raw(render_head_content) %>

  </head>
  <% if params[:q].to_s.empty? and params[:f].to_s.empty? and params[:id].nil? %>
  <body onload="$('input#q').focus();" class="<%= render_body_class %>">
    <% else %>
  <body class="<%= render_body_class.html_safe %>">
    <% end %>
      <div id="doc4" class="yui-t2">

<div id="hd">
        <div class="yui-g">
          <div class="yui-u first">
            <%- if params[:exhibit_id] || (params[:controller] == "exhibits" && params[:id]) -%>
              <table>
                <tr>
                  <td>
                    <%- params[:exhibit_id] ? exhibit_id = params[:exhibit_id] : exhibit_id = params[:id] -%>
                    <%- @atrium_exhibit.nil? ? exhibit = Atrium::Exhibit.find(exhibit_id) : exhibit = @atrium_exhibit -%>
                    <h3><%# link_to_exhibit :exhibit_id=>exhibit_id, :label=>"#{exhibit.title}", :style=>"text-decoration:none;border-bottom:medium none" %></h3>
                  </td>
                </tr>
              </table>
            <%- else -%>
            <h1 class="site_title"><%= link_to application_name, "/" %><%= (params[:controller] == "catalog" and !params[:id]) ? "<span id='results_text'>Search Results</span>".html_safe : "" %></h1>
            <%- end -%>
          </div>
          <div class="yui-u user_util_links">
            <%= render :partial=>'/user_util_links' %>
          </div>
        </div>
      </div>

<div id="bd">

       <div id="yui-main">
          <div class="yui-b">
            <%= render :partial=>'/flash_msg' %>
            <%= yield %>
          </div>
        </div>

        <div class="yui-b sidebar">
          <%- if params[:controller] == "catalog" -%>
            <%- if params[:render_search].blank? || params[:class] == "edit_exhibit" -%>
              <%- if params[:exhibit_id] -%>
                <h3><%# link_to_exhibit(:label=>"Back to Browse Exhibit") %></h3>
              <%- end -%>
            <%- else -%>
              <%# render :partial => 'shared/exhibit_search_form' %>
              <%= render :partial => 'atrium_exhibits/navigation' %>
              <%= render :partial => 'atrium_exhibits/edit_navigation' %>
            <%- end -%>
          <%- elsif params[:controller] == "atrium_exhibits" && !(params[:action] == "show")-%>
            <%= render :partial => 'atrium_exhibits/edit_navigation' %>
          <%- elsif params[:controller] == "atrium_showcases"-%>
            <%= render :partial => 'atrium_exhibits/edit_navigation' %>
          <%- elsif params[:controller] == "atrium_exhibits" && params[:action] == "show" && params[:edit_browse_page]=="true"-%>
             <%= render :partial => 'atrium_browse_pages/browse_page_navigation' %>
          <%- elsif params[:controller] == "atrium_exhibits" && params[:action] == "show"-%>
            <%= render :partial => 'shared/exhibit_search_form' %>
            <%= render :partial => 'atrium_exhibits/navigation' %>

          <%- elsif params[:controller] != "user_sessions" && !(params[:controller] == "exhibits" && params[:action] == "index")-%>
            <%= render :partial => 'shared/exhibit_search_form' %>
            <%= render :partial => 'atrium_exhibits/navigation' %>
          <%- end -%>
          <%= sidebar_items.join('').html_safe %>
        </div>
<div id="ft"><%= raw(@footer) %></div>
</div>
    </body>

    </html>
