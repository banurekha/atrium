<h2>Description</h2>
 <ol>
  <%- descriptions.each do |desc| -%>
  <li>
    <div class="<%= session[:edit_showcase]&&(current_user) && (can? :create, Atrium::Collection) ?  "edit-textarea": "no-edit"%>" id="div_desc" data-column-name="atrium_description[description]" data-update-uri=<%=atrium_description_path(desc)%>>
      <%= desc.description.html_safe if desc.description %>
    </div>
    <%- if session[:edit_showcase]&&(current_user) && (can? :create, Atrium::Description) %>
      <a class="destroy_description" href=# action="<%= atrium_description_path(desc.id)%>" title="Remove Description"> Delete this description</a>
    <%- end %>
  </li>
  <%- end -%>
</ol>