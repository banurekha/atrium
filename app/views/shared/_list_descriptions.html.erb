 <ul class="description">
  <%- descriptions.each do |desc| -%>
    <li>
      <%- if desc.page_display.nil? || desc.page_display == "newpage" -%>
        <h3><em>
          <%= link_to "#{desc.title}", atrium_description_path(desc.id), :label=>("Essay: \"#{desc.title}\"") %>
        </em></h3>
        <blockquote>
          <%= desc.summary.content.html_safe unless desc.summary.nil? %>
        </blockquote>
        <%= link_to "#{desc.title}", atrium_description_path(desc.id), :label=>("[Read the complete essay]")%>
      <%- else -%>
        <h3> <em><%= "Essay: #{desc.title}"%></em> </h3>
         <blockquote class="intro"><%= truncate( desc.essay.content.html_safe, :length =>50, :ommision => "....")%></blockquote>
         <%- if desc.essay.content.html_safe.length>50 -%>
           <a class="heading" href="#">[Read the complete essay]</a>
           <div style="display: none"class="content <%= session[:edit_showcase]&&(current_user) && (can? :create, Atrium::Collection) ?  "edit-textarea": "no-edit"%>" id="<%= desc.id %>" data-column-name="[essay_attributes[content]]" data-update-uri=<%=atrium_description_path(desc)%>>
             <%= desc.essay.content.html_safe %>
           </div>
         <%- end -%>
         <%- if session[:edit_showcase]&&(current_user) && (can? :create, Atrium::Description) %>
           <%= link_to 'Edit Description', edit_atrium_description_path(@atrium_showcase.id), :class => 'description_colorbox button', :action=> atrium_descriptions_path(@atrium_showcase.id) %>
           <a class="destroy_description button" href=# action="<%= atrium_description_path(desc.id)%>" title="Remove Description"> Delete this description</a>
         <%- end %>
      <%- end -%>
    </li>
  <%- end -%>
</ul>
