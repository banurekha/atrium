<div class="facet-list">
  <h2><%=@atrium_collection.title %></h2>
  <ul class="collection-controls">
    <li><%= link_to 'View Collection', @atrium_collection %></li>
    <li><%= link_to 'Configure Collection', edit_atrium_collection_path(@atrium_collection.id) %></li>
    <li><%= link_to 'Configure Collection Page', @atrium_collection %></li>
    <li><%= link_to 'Configure Browse Page',  new_atrium_collection_atrium_browse_pages_path(@atrium_collection,:atrium_browse_page_type=>"atrium_collection")%></li>
  </ul>
  <%- unless @showcase_navigation_data.nil? || @showcase_navigation_data.empty? -%>
    <dl id="showcases">
      <%- @showcase_navigation_data.each do |showcase| -%>
        <dt><%= showcase.title%></dt>
        <dd><%= link_to 'Configure Showcase', edit_atrium_showcase_path(showcase) %></dd>
        <dd>
          <%# link_to 'Configure Browse Page',  new_atrium_browse_page_path(:atrium_parent_id=>showcase.set_number, :atrium_parent_type=>"showcase", :collection_id => showcase.atrium_collection_id)%>
          <%= link_to 'Configure Browse Page',  new_atrium_showcase_atrium_browse_pages_path(showcase,:atrium_browse_page_type=>"atrium_showcase")%>
        </dd>
      <%- end -%>
    </dl>
  <%- end -%>
</div>

<hr />
<%= link_to "Delete this Collection", atrium_collection_path(@atrium_collection.id), :method => :delete, :remote => true, :confirm => "Are you really sure?" %>
