<%=render :partial=>'shared/collection_title_header'%>

<div id="show_description">
  <%- if @atrium_showcase && @atrium_showcase.descriptions.any? -%>
    <ul>
      <%- @atrium_showcase.descriptions.each do |desc| -%>
        <li>
          <div class="<%= params[:edit_showcase] && (can? :create, Atrium::Collection) ?  "edit-textarea": "no-edit"%>" id="div_desc" data-column-name="atrium_description[description]" data-update-uri=<%= atrium_description_path(desc) %>>
            <%= desc.description.html_safe unless desc.description.blank? %>
          </div>
        </li>
      <%- end -%>
    </ul>
  <%- end -%>
</div>

<span id="show_selected">
  <%- if !@documents.blank? -%>
    <%= render :partial=>'shared/featured_sources' %>
  <%- end -%>
</span>

<hr />

<h2>Complete Sources</h2>
<div id="complete_sources">
  <%= render :partial=>'browse_index'%>
</div>
