<%= form_for(@atrium_collection, :html => {:class => "atrium"}) do |f| %>
  <fieldset>
    <legend>Basic Configuration</legend>
    <% if @atrium_collection.errors.any? %>
      <ul class="errors">
        <% @atrium_collection.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <ol>
      <li>
        <%= f.label :title, 'Title:' %>
        <%= f.text_field :title %>
      </li>
      <li>
        <%= f.label :search_facet_names, 'Collection Search Facets:' %>
        <%= f.collection_select :search_facet_names, Blacklight.config[:facet][:field_names].map{|field_name| Atrium::Search::FacetSelection.new(:field_name => field_name)}, :field_name, :label, {}, :multiple => true, :class => 'chosen', :'data-placeholder' => 'Select desired facets from the Collection' %>
      <li/>
    </ol>
    <a class='inline' href="#inline_content">Add Collection Home Page description</a>
    <!--<div style='display:none'>-->
      <div id='inline_content'>
        <%= f.label :label, 'Description:' %>
        <%= f.text_area :collection_description, :rows=> '20', :cols => '120', :class =>'jquery-ckeditor' %>
      </div>
    <!--</div>-->


    <p>
      <%= f.submit 'Update Collection Configuration' %>
    </p>
  </fieldset>
<% end %>

<h3>Collection Scope</h3>
<p>
  An collection is a subset of a collection. The scope of the collection can be set to any possible query made in the search interface.
</p>
<%- query_params = {} -%>
<%- query_params.merge!(@atrium_collection.filter_query_params) if @atrium_collection.filter_query_params -%>
<%= link_to("Set Collection Scope", edit_atrium_collection_filter_path(@atrium_collection.id, :f=>query_params[:f], :q=>query_params[:q])).html_safe %>

<h3>Showcases</h3>

<% if @atrium_collection.showcases.any? %>
  <ol data-resource="<%= update_atrium_collection_showcase_order_path %>" class="showcase-listing sortable">
    <% @atrium_collection.showcases.each do |showcase| %>
      <li data-id="<%= showcase.id %>" data-order="<%= showcase.set_number %>" class="ui-state-default">
        <span class="ui-icon ui-icon-arrowthick-2-n-s"></span>
        <%= showcase.title %>
        <span class="controls">
          <%= link_to 'Configure', edit_atrium_showcase_path(showcase) %>
        </span>
      </li>
    <% end %>
  </ol>
<% else %>
  <em>There are no showcases in this collection.</em>
<% end %>

<%= form_for(@atrium_collection) do |f| %>
  <%- @showcase = Atrium::Showcase.new-%>
  <%= f.fields_for :showcases, @showcase do |showcase_fields| %>
    <%- @showcase.set_number = @atrium_collection.showcases.size + 1 -%>
    <%= showcase_fields.hidden_field :set_number %>
    <%= f.submit 'Add a Showcase to this Collection' %>
  <% end %>
<% end %>

