<div class="facet-list">
      <h2><%=@atrium_exhibit.title %></h2>
      <li> <%= link_to 'Configure Exhibit', edit_atrium_exhibit_path(@atrium_exhibit.id) %> </li>
      <li> <%= link_to 'Configure Exhibit Page', @atrium_exhibit %> </li>
    <%- unless @showcase_navigation_data.nil? || @showcase_navigation_data.empty? -%>
      <%- @showcase_navigation_data.each do |showcase| -%>
      <h3> Showcase <%= showcase.set_number%> </h3>
      <ul>
        <li><%= link_to 'Config Browse level',  edit_atrium_showcase_path(:id=>showcase.set_number, :exhibit_id => showcase.atrium_exhibit_id)%></li>
        <li> <%= link_to 'Configure Browse Page', @atrium_exhibit %> </li>
      </ul>
      <%- end -%>
    <%- end -%>
</div>


<%= form_for(@atrium_exhibit) do |f| %>
<%- @showcase = Atrium::Showcase.new-%>
<%= f.fields_for :showcases, @showcase do |showcase_fields| %>
  <%- @showcase.set_number = @atrium_exhibit.showcases.size + 1 -%>
  <%= showcase_fields.hidden_field :set_number %>
  <%= f.submit 'Add Showcase' %>
<% end %>
<% end %>

