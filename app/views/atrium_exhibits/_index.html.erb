<%- exhibits = get_exhibits_list -%>
<%- if exhibits.size > 0 -%>
  <ul class="collection-list">
    <%- exhibits.each do |exhibit| -%>
      <li>
        <h2><%=link_to exhibit.title.blank? ? "Unnamed Exhibit" : exhibit.title, atrium_exhibit_path(exhibit) %></h2>
      </li>
    <%- end -%>
  </ul>
<%- else -%>
  <p>No exhibits found.</p>
<%- end -%>

<%- if current_user -%>
    <%- @atrium_exhibit = Atrium::Exhibit.new-%>
    <%= form_for (@atrium_exhibit) do |f| %>
      <%= f.submit 'Create New Exhibit' %>
    <%- end -%>
<%- end -%>
