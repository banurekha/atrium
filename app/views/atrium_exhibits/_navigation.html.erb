<!--this was id="facets" but removed for now so items below are always unhidden, will style more later-->
<div class="facet-list">
  <%# unless @browse_levels.nil? || @browse_levels.empty? -%>
    <%# browse_level_data = @browse_level_navigation_data -%>
    <%# unless browse_level_data.nil? || browse_level_data.empty? -%>
      <!-- recursively render the browse levels-->
      <%- browse_set_data.each do |browse_set| -%>
        <%- unless browse_set.browse_levels.nil? || browse_set.browse_levels.empty? -%>
          <%= render :partial => 'atrium_exhibits/navigation_browse_levels', :locals=>{:browse_levels=>browse_set.browse_levels, :browse_facets=>browse_set.browse_facet_names,:browse_set_number=>browse_set.set_number}%>
	  <%- if params[:controller]=="atrium_exhibits" && params[:action]=="edit" -%>
	    <%= render :partial=>'browse_set_form', :locals=>{:browse_set=>browse_set}%>
	  <%- end -%>
        <%- end -%>
      <%- end -%>
    <%- end -%>
  <%- end -%>
</dbi>
<%- if params[:controller]=="atrium_exhibits" && params[:action]=="edit" -%>
  <%= form_for(@atrium_exhibit) do |f| %>
    <%- @browse_set = Atrium::BrowseSet.new-%>
    <%= f.fields_for :browse_sets, @browse_set do |browse_set_fields| %>
      <%- @browse_set.set_number = @atrium_exhibit.browse_sets.size + 1 -%>
      <%= browse_set_fields.hidden_field :set_number %>
      <%= f.submit 'Add Browse Set' %>
    <% end %>
  <% end %>
<%- end -%>
